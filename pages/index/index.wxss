/**index.wxss**/
.container-swiper image {
  width: 100%;
}
.selection-text {
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: green;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.selection-text-all {
  font-size: 12px;
  color: green;
}
.content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:center;
}
.content-item {
  width: 45%;
  height: 250rpx;
  margin: 5px;
  position: relative;
}
.content image {
  width:100%;
  height:100%;
}
.content-item-text {
  position: absolute;
  bottom: 0px;
  font-size: 15px;
  color:white;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  background: -webkit-linear-gradient(bottom,rgba(0, 0, 0, 0.8),rgba(0, 0, 0, 0));
  width: 100%;
  height: 125rpx;
  padding-left: 1%;
  padding-right: 1%;
  padding-bottom: 1%;
}
.list-item {
  width: 100%;
  height:100%
}
.list-item-images {
  width: 100%;
  height: 460rpx;
  position: relative
}
.list-item-images-img {
  width: 100%;
  height: 100%
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  border-radius: 50%;
  bottom: -50rpx;
  right: 100rpx
}
.list-item-text {
  width: 95%;
  height: 200rpx;
  margin-top: 20rpx;
  padding-left: 2%;
  padding-right: 2%
}
.list-item-text-title {

}
.list-item-text-content {
  font-size: 15px;
  color: grey;
  margin-bottom: 20rpx;
  margin-top: 20rpx
}